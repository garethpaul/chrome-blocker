{
  "name": "GetToWork",
  "version": "0.01",
  "manifest_version": 2,

  "description": "GetToWork is a very simple website blocker designed for personal use.",
  "icons": {
    "16": "icon.16.png",
    "48": "icon.48.png",
    "128": "icon.128.png"
  },

  "browser_action": {
    "default_icon": "icon.48.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["js/background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/contentScript.js"
      ],
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": [
    "blockedSite.html"
  ],

  "permissions": [
    "*://*/*",
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "webNavigation"
  ],
  "incognito": "split"
}
